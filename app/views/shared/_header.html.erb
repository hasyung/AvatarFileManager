<div id="header" class="clearfix">
  <div class="logo">
      <%= link_to image_tag('logo1.png', :alt => 'Boxroom'), root_path %>
  </div>
  <%= render 'shared/menu' %>
  <% if signed_in? -%>
  <div class="user_welcome">
    <div class="item wel">
      <%= '您好' %>, <%= current_user.name %>!
    </div>
    <div class="item">
      <%= link_to '设置', edit_user_path(current_user) %>
    </div>
    <div class="item">
      <%= link_to '登出', signout_path, :method => :delete %>
    </div>
  </div>
  <% end -%>
</div>
